<AnchorPane prefHeight="504.0" prefWidth="640.0" styleClass="mentStyle" stylesheets="@../application/application.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.displayAppController">
   <children>
      <Label layoutX="14.0" layoutY="94.0" prefHeight="42.0" prefWidth="141.0" text="Enter a date:">
         <font>
            <Font name="Georgia Bold" size="16.0" />
         </font></Label>
      <Button fx:id="cancelButton" layoutX="24.0" layoutY="427.0" mnemonicParsing="false" onAction="#ClickBackButton" text="Back">
         <font>
            <Font name="Georgia" size="15.0" />
         </font></Button>
      <TextField fx:id="DateTF" layoutX="124.0" layoutY="96.0" prefHeight="39.0" prefWidth="167.0" promptText="YYYY-MM-DD">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></TextField>
      <Button fx:id="displayButt" layoutX="448.0" layoutY="100.0" mnemonicParsing="false" onAction="#ClickGoButton" text="Display">
         <font>
            <Font name="Georgia" size="15.0" />
         </font></Button>
      <TableView fx:id="patientTable" layoutX="-1.0" layoutY="170.0" onMouseClicked="#mouseClicked" prefHeight="229.0" prefWidth="640.0" style="-fx-background-color: #F6F6F6;" AnchorPane.leftAnchor="-1.0">
        <columns>
          <TableColumn fx:id="PnumCol" prefWidth="97.0" text="Patient Number" />
          <TableColumn fx:id="PnameCol" prefWidth="122.3333740234375" text="Patient Name" />
            <TableColumn fx:id="DocIDCol" prefWidth="65.3333740234375" text="Doctor ID" />
            <TableColumn fx:id="DateCol" prefWidth="99.66668701171875" text="Date" />
            <TableColumn fx:id="TimeCol" prefWidth="63.0" text="Time" />
            <TableColumn fx:id="tPhoneCol" prefWidth="101.6666259765625" text="Contact Number" />
            <TableColumn fx:id="MissedCol" prefWidth="88.0" text="Missed" />
        </columns>
         <effect>
            <Blend mode="MULTIPLY" />
         </effect>
      </TableView>
      <Button fx:id="displayAllButt" layoutX="532.0" layoutY="100.0" mnemonicParsing="false" onAction="#ClickDisplayAllButton" text="Display All!">
         <font>
            <Font name="Georgia" size="15.0" />
         </font></Button>
      <Button fx:id="btnCancel" layoutX="241.0" layoutY="427.0" mnemonicParsing="false" onAction="#ClickCancelButton" text="Cancel Appointment">
         <font>
            <Font name="Georgia" size="15.0" />
         </font></Button>
      <CheckBox fx:id="cbWeek" layoutX="310.0" layoutY="104.0" mnemonicParsing="false" text="Full Week">
         <font>
            <Font name="Georgia Bold" size="16.0" />
         </font>
      </CheckBox>
      <Label layoutX="180.0" layoutY="34.0" text="Current Appointments">
         <font>
            <Font name="Georgia Bold" size="24.0" />
         </font>
      </Label>
      <RadioButton fx:id="rbAttend" disable="true" layoutX="423.0" layoutY="431.0" mnemonicParsing="false" onAction="#AttendAppointment" text="Attended">
         <font>
            <Font name="Georgia Bold" size="15.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="attended" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="rbMiss" disable="true" layoutX="532.0" layoutY="431.0" mnemonicParsing="false" onAction="#AttendAppointment" text="Missed" toggleGroup="$attended">
         <font>
            <Font name="Georgia Bold" size="15.0" />
         </font>
      </RadioButton>
      <Label fx:id="dateFeedback" alignment="CENTER" contentDisplay="CENTER" layoutX="124.0" layoutY="71.0" prefHeight="17.0" prefWidth="167.0" textAlignment="CENTER" textFill="#a42525" visible="false">
         <font>
            <Font name="System Italic" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
